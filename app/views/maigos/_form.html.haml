  =  form_with model:@maigo, local:true do |f| 
    フォーム内容
    .field__input
      = f.label :image do
        = f.label :画像
        = icon('fas', 'image', class: 'icon')
        = f.file_field :image, class: 'hidden'
    .field__input
      = f.label :名前
      = f.text_field :name,placeholder: '猫の名前を入力', class: 'm-form', id:cat_name
    .field__input
      = f.label :年齢
      = f.number_field :age,placeholder: '半角数字で入力', class: 'm-form', id:cat_age
    .field__input
      = f.label :性別
      = f.text_field :sex,placeholder: 'オス、メス（去勢の有無）', class: 'm-form', id:cat_sex
    .field__input
      = f.label :場所
      = f.text_field :address,placeholder: '○○市番地付近など失踪場所', class: 'm-form', id:cat_address
    .field__input
      = f.label :備考
      = f.text_area :content,placeholder: '失踪日、特徴', class: 'm-form2', id:cat_d
      
    .actions
      = f.submit 'Save', class: 'm-submit'


    = link_to 'Topに戻る', maigos_path